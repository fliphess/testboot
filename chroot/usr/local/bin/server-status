#!/usr/bin/env python
import os
import sys
import socket
import subprocess

start_msg = """
               ___
         |     | | 
        / \    |R| 
       |--o|===|O| 
       |---|   |C|  Distro:   %s
      /     \  |K|  Kernel:   %s
     |       | |E|  Arch:     %s
     |       |=|T|  OS:       %s
     |       | | |
     |_______| |_|
      |@| |@|  | |
    ___________|_|_

    %s

"""

def run(command):
    popen = subprocess.Popen(command.split(), stdout=subprocess.PIPE)
    popen.wait()
    return popen.stdout.read().strip().lstrip()

def getip():
    host, url = False, False
    with open('/proc/cmdline') as f:
        cmdline = f.readline()
    url = [f.split('fetch=')[1] for f in cmdline.split() if "fetch=" in f]
    if url: 
        host = url[0].strip('http://').split('/')[0]

    if host:
        s = socket.socket(socket.AF_INET, socket.SOCK_DGRAM)
        s.connect((host, 80))
        return s.getsockname()[0]
    else:
        return 'unknown'


info = run('/usr/bin/w').split('\n')[0]
distro, kernel, arch, os = run('uname -mros').split()
ip = getip()
hostname = socket.gethostname()

print start_msg % (distro, kernel, arch, os, info)
print "    Rocket In Mem Linux Boot"
print "    To login press ALT ->\n"
print "    Hostname:           %s" % socket.gethostname()
print "    IP:                 %s" % getip()
print "\n"  
